bibentry(
  bibtype  = "Manual",
  title    = paste("rmdcev:", meta$Title),
  author   = Filter(function(p) "aut" %in% p$role, as.person(meta$Author)),
  year     = "2020",
  note     = paste("R package version", meta$Version),
  url      = meta$URL,
  textVersion = paste0(
    "Patrick Lloyd-Smith (2020). rmdcev: ", meta$Title, ". ",
    "R package version ", meta$Version, "."
  )
)
